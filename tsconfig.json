{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "declaration": false,
        "module": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "target": "es2017",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "es2017",
            "dom",
            "es6",
            "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "src/*.android.ts",
                "src/*.ios.ts",
                "src/*.tns.ts",
                "src/*.web.ts",
                "src/*.ts"
            ],
            "~/*": [
                "src/*"
            ]
        },
        "removeComments": false
    },
    "include": [
        "references.d.ts",
        "src/tests/**/*.ts"
    ],
    "files": [
        "./src/main.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms",
        "e2e",
        "**/*.ns.ts",
        "**/*.tns.ts",
        "**/*.android.ts",
        "**/*.ios.ts"
    ]
}